<?xml version="1.0" encoding="utf-8" ?>

<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Domain"
                   namespace="Domain">

  <class name="Album" table="album">
    <id name="Id" column="album_id" type="int">
      <generator class="native"></generator>
    </id>
    <property name="ImageCouv" column="album_img" not-null="true"/>
    <property name="Titre" column="album_titre" not-null="true"/>
    <property name="Categorie" column="album_categorie" not-null="true"/>
    <property name="Serie" column="album_serie" not-null="true"/>
    <property name="Editeur" column="album_editeur" not-null="true"/>
    <bag name="Genres" table ="album_genres" lazy ="true">
      <key column="album_id"/>
      <one-to-many class ="Genre" column="genre_id"/>
    </bag>
    <bag name="Auteurs" table ="album_auteurs" lazy ="true">
      <key column="album_id"/>
      <one-to-many class ="Auteur" column="auteur_id"/>
    </bag>

  </class>

</hibernate-mapping>